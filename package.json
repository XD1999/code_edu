{
    "name": "ai-debug-explainer",
    "displayName": "AI Debug Explainer",
    "description": "Helps newcomers learn complex projects through AI-powered debugging explanations",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onDebug"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "keybindings": [
            {
                "command": "ai-debug-explainer.explainTerm",
                "key": "ctrl+alt+e",
                "mac": "cmd+alt+e"
            },
            {
                "command": "ai-debug-explainer.extractContext",
                "key": "ctrl+alt+s",
                "mac": "cmd+alt+s"
            },
            {
                "command": "ai-debug-explainer.explainTermAnalogy",
                "key": "ctrl+alt+a",
                "mac": "cmd+alt+a"
            },
            {
                "command": "ai-debug-explainer.explainTermExample",
                "key": "ctrl+alt+x",
                "mac": "cmd+alt+x"
            },
            {
                "command": "ai-debug-explainer.explainTermMath",
                "key": "ctrl+alt+m",
                "mac": "cmd+alt+m"
            },
            {
                "command": "ai-debug-explainer.explainTermVisualization",
                "key": "ctrl+alt+v",
                "mac": "cmd+alt+v"
            }
        ],
        "commands": [
            {
                "command": "ai-debug-explainer.toggle",
                "title": "AI Debug Explainer: Toggle"
            },
            {
                "command": "ai-debug-explainer.startLearning",
                "title": "AI Debug Explainer: Start Learning"
            },
            {
                "command": "ai-debug-explainer.stopLearning",
                "title": "AI Debug Explainer: Stop Learning"
            },
            {
                "command": "ai-debug-explainer.viewTrace",
                "title": "AI Debug Explainer: View Trace"
            },
            {
                "command": "ai-debug-explainer.manualCapture",
                "title": "AI Debug Explainer: Manual Capture"
            },
            {
                "command": "ai-debug-explainer.clearTraces",
                "title": "AI Debug Explainer: Clear All Traces"
            },
            {
                "command": "ai-debug-explainer.clearFunctionExplanations",
                "title": "AI Debug Explainer: Clear Function Explanations"
            },
            {
                "command": "ai-debug-explainer.explainTerm",
                "title": "AI Debug Explainer: Explain Term"
            },
            {
                "command": "ai-debug-explainer.extractContext",
                "title": "AI Debug Explainer: Extract Context"
            },
            {
                "command": "ai-debug-explainer.explainTermAnalogy",
                "title": "AI Debug Explainer: Explain Term (Analogy)"
            },
            {
                "command": "ai-debug-explainer.explainTermExample",
                "title": "AI Debug Explainer: Explain Term (Example)"
            },
            {
                "command": "ai-debug-explainer.explainTermMath",
                "title": "AI Debug Explainer: Explain Term (Math)"
            },
            {
                "command": "ai-debug-explainer.explainTermVisualization",
                "title": "AI Debug Explainer: Explain Term (Visualization)"
            }
        ],
        "configuration": {
            "title": "AI Debug Explainer",
            "properties": {
                "ai-debug-explainer.apiKey": {
                    "type": "string",
                    "description": "API key for the AI service (OpenAI, Moonshot, etc.)"
                },
                "ai-debug-explainer.apiUrl": {
                    "type": "string",
                    "default": "https://api.openai.com/v1/chat/completions",
                    "description": "URL for the AI chat completions endpoint"
                },
                "ai-debug-explainer.model": {
                    "type": "string",
                    "default": "gpt-3.5-turbo",
                    "description": "AI model to use for explanations"
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "ai-debug-explainer-view-container",
                    "title": "AI Debug Explainer",
                    "icon": "resources/icon.png"
                }
            ]
        },
        "views": {
            "ai-debug-explainer-view-container": [
                {
                    "type": "webview",
                    "id": "ai-debug-explainer.traceView",
                    "name": "Trace Chat"
                },
                {
                    "type": "webview",
                    "id": "ai-debug-explainer.knowledgeMapView",
                    "name": "Knowledge Map"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/assert": "^1.5.11",
        "@types/mocha": "^10.0.10",
        "@types/node": "16.x",
        "@types/vscode": "^1.74.0",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "@vscode/test-electron": "^2.5.2",
        "@vscode/vsce": "^3.7.0",
        "eslint": "^8.28.0",
        "typescript": "^4.9.3"
    },
    "dependencies": {
        "axios": "^1.2.1"
    }
}